include Makefile.include 

TARGETS= src doc

.PHONY: doc src

all: $(TARGETS)

doc: 
	cd $@ && $(MAKE)

src:
	cd $@ && $(MAKE)

install:
	for I in $(TARGETS); do cd $$I && $(MAKE) $@ && cd ..; done

clean:	
	for I in $(TARGETS); do cd $$I && $(MAKE) $@ && cd ..; done

