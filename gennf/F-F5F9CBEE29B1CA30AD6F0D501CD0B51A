# Makefile for gennf transparencies (in German).
#

OUTPUT = folien.pdf

.SUFFIXES: .fig .pdf_t

all : $(OUTPUT)

.fig.pdf_t:
	fig2dev -L pdftex -p dummy $< $*.pdf
	fig2dev -L pdftex_t -p $*.pdf $< $*.pdf_t

$(OUTPUT): folien.tex beispiel0.pdf_t beispiel1.pdf_t orthogonal.pdf_t
	pdflatex $<
	pdflatex $<

publish : gennf-report.pdf
	scp gennf-report.pdf $(USER)$(SERVER):$(ROOT)
	ssh $(USER)$(SERVER) "cd $(ROOT); chmod 664 gennf-report.pdf"

clean :
	rm -f *.aux *.log *.nav *.out *.bak *~ *.snm *.toc *.pdf_t $(OUTPUT)
